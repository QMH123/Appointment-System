.head{
  height: 550rpx;
  width: 100%;
  background-color: rgb(5, 205, 255);
}

.bj{
   position: fixed;
   width: 100%;
  height: 100%;
  z-index: -1;
  background-color: rgb(5, 205, 255);
  background-size: 100% 100%;
}

#title{
  width: 80%;
  position: absolute;
  left: 10%;
  top: 80rpx;
  font-family: YouYuan;
  text-align: center;
  font-size: 70rpx;
  font-weight: 800;
  color: white;
}

#tx{
  height: 250rpx;
  width: 250rpx;
  position: absolute;
  left: 35%;
  top: 200rpx;
  background-color: white;
  border-radius: 100%;
  overflow: hidden;
}

#tx image{
 height: 250rpx;
  width: 250rpx;
}

#name{
  position: absolute;
  top: 480rpx;
  font-size: 45rpx;
  font-weight: 800;
  color: white;
  width: 100%;
  text-align: center;
}

.info image{
  position: relative;
  top: 25rpx;
  padding: 15rpx;
  width: 50rpx;
  height: 50rpx;
}

.info text{
  position: relative;
  left: 35rpx;
  font-size: 35rpx;
}

.line{
  height: 20rpx;
  width: 100%;
  background-color: rgb(5, 205, 255);
}

.content{
  border: solid rgb(92, 92, 92) 2px;
  border-radius: 40rpx;
  width: 90%;
  position: relative;
  left: 5%;
  padding-bottom: 20rpx;
  background-color: white;
}

.box{
  background-color: rgb(5, 205, 255);
}